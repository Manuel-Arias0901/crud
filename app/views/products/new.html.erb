
<%= form_for @product do |f|%>
    <div>
        <%= f.label :Nombre%>
        <%= f.text_field :name%>
    </div>
    <div>
        <%= f.label :Descripcion%>
        <%= f.text_area :description%>
    </div>
    <div>
        <%= f.label :Precio%>
        <%= f.number_field :price%>
    </div>
    <div>
        <p><%=f.label :Tipo%></p>
        <p>
            <%= f.collection_select(:tipo_id, Tipo.all, :id, :name) %>
        </p>
    </div>

    <div>
        <p><%= f.submit%></p>
    </div>
    <p><%= link_to "Regresar", products_path%></p>
<%end%>